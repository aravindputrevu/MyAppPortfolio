<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/my_title" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:id="@+id/textView" />

    <Button android:text="@string/media_streamer" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/abc_action_bar_content_inset_material"
        android:paddingLeft="@dimen/abc_action_bar_content_inset_material"
        android:paddingTop="@dimen/abc_action_bar_content_inset_material"
        android:paddingBottom="@dimen/abc_action_bar_content_inset_material"
        android:textSize="13sp"
        android:background="#F08C35"
        android:onClick="sendMessage"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="19dp"
        android:id="@+id/button"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/button5"
        android:layout_alignEnd="@+id/button5"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignStart="@+id/button5" />

    <Button android:text="@string/super_duo1" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:textSize="13sp"
        android:background="#F08C35"
        android:onClick="sendMessage"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/button4"
        android:layout_below="@+id/button5"
        android:layout_marginTop="16dp"
        android:layout_alignRight="@+id/button3"
        android:layout_alignEnd="@+id/button3"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3" />

    <Button android:text="@string/super_duo2" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:textSize="13sp"
        android:background="#F08C35"
        android:onClick="sendMessage"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/button5"
        android:layout_below="@+id/button"
        android:layout_marginTop="13dp"
        android:layout_alignRight="@+id/button4"
        android:layout_alignEnd="@+id/button4"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4" />

    <Button android:text="@string/ant_terminator" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:textSize="13sp"
        android:background="#F08C35"
        android:onClick="sendMessage"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/button3"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/button4"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2" />

    <Button android:text="@string/materialize" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:textSize="13sp"
        android:background="#F08C35"
        android:onClick="sendMessage"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/button2"
        android:layout_below="@+id/button3"
        android:layout_marginTop="21dp"
        android:layout_alignRight="@+id/button6"
        android:layout_alignEnd="@+id/button6"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6" />

    <Button android:text="@string/capstone" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:textSize="13sp"
        android:background="#EC407A"
        android:onClick="sendMessage"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/button6"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
